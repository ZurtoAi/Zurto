{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist/types",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "docs", "**/*.test.ts", "**/*.test.tsx"]
}
