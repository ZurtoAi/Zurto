# Portfolio Frontend Environment Variables Template
# Copy this file to .env.local and update values as needed

# API Configuration
VITE_API_URL=http://localhost:3000
VITE_API_TIMEOUT=10000

# Theme Configuration
VITE_THEME=dark
VITE_ACCENT_COLOR=#00ff88
VITE_SECONDARY_COLOR=#ff0080

# Animation Configuration
VITE_ANIMATION_SPEED=1
VITE_ENABLE_3D=true
VITE_ENABLE_GSAP=true
VITE_ENABLE_FRAMER_MOTION=true

# Three.js Configuration
VITE_3D_SCENE_QUALITY=high
VITE_3D_ANTIALIASING=true
VITE_3D_PIXEL_RATIO=auto

# Performance Configuration
VITE_LAZY_LOAD_THRESHOLD=0.1
VITE_PRELOAD_ASSETS=true
VITE_OPTIMIZE_IMAGES=true

# Development Configuration
VITE_DEBUG_MODE=false
VITE_VERBOSE_LOGS=false
VITE_HOT_MODULE_RELOAD=true

# Production Configuration
VITE_ENV=development
VITE_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_BLOG=true
VITE_ENABLE_PROJECTS=true
VITE_ENABLE_CONTACT=true
VITE_ENABLE_ANIMATIONS=true

# Analytics (Optional)
VITE_ANALYTICS_ID=
VITE_TRACKING_ENABLED=false

# Build Output
VITE_OUTDIR=dist
VITE_SOURCE_MAP=false